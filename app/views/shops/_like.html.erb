<% if @shop.liked_by?(current_user) %>
  <%= link_to shop_likes_path(@shop), method: :delete do %>
    <i class="far fa-heart"></i>
    <%= @shop.likes.count %>
  <% end %>
<% else %>
  <%= link_to shop_likes_path(@shop), method: :post do %>
    <i class="far fa-heart"></i>
    <%= @shop.likes.count %>
  <% end %>
<% end %>