<div class="image-grid">
  <% @shops.each_with_index do |shop, index| %>
    <div class="image-item">
      <img src="<%= shop.img %>" alt="<%= shop.name %>">
    </div>
  <% end %>
</div>
<h1>shops#index</h1>
<% if logged_in? %>
  <%= render 'shops/logged_in' %>
<% else %>
  <%= render 'shops/not_logged_in' %>
<% end %>
