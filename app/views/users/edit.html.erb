<h1>Users#edit</h1>

<% if @user.errors.any? %>
  <p>エラーがあります</p>
  <ul>
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

    <%= form_with model: @user, local: true do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %><br>

        <%= f.label :email %>
        <%= f.text_field :email %><br>

        <%= f.label :password %>
        <%= f.password_field :password %><br>

        <%= f.submit "編集" %>
      </div>
    <% end %>
