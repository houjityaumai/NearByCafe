<h1>Users#show</h1>
<table class="table">
  <tr>
    <th>name</th>
    <td><%= @user.name %></td>
  </tr>
    <tr>
    <th>email</th>
    <td><%= @user.created_at %></td>
  </tr>

    <tr>
    <th>created_at</th>
    <td><%= @user.created_at %></td>
  </tr>
  <tr>
    <th>updated_at</th>
    <td><%= @user.updated_at %></td>
  </tr>
</table>

<% if current_user?(@user) %>
  <%= link_to '編集', edit_user_path(@user.id) %>
  <%= link_to "削除", user_path(@user.id),  
            method: :delete, data: {confirm: "本当に削除しますか？"} %>
<% else %>
  <p>じぶのしかへんしゅうさくじょできない</p>
<% end %>